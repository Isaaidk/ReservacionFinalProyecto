<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.Views.CreateUserPage"
             Title="CreateUserPage">
    <StackLayout Padding="20">
        <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
        <Entry Placeholder="Correo Electrónico" Text="{Binding Email}" />
        <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Contrasenia}" />
        <Switch IsToggled="{Binding EsAdmin}" />
        <Label Text="¿Es administrador?" />
        <Button Text="Crear Usuario" Command="{Binding CreateUserCommand}" />
    </StackLayout>
</ContentPage>