<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.Views.LoginPage"
             Title="LoginPage">
    <StackLayout Padding="20">
        <Entry Placeholder="Correo electrónico" Text="{Binding Email}" />
        <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Contrasenia}" />
        <Button Text="Iniciar Sesión" Command="{Binding LoginCommand}" />
        <Button Text="Crear Usuario" Command="{Binding NavigateToCreateUserCommand}" />

    </StackLayout>
</ContentPage>