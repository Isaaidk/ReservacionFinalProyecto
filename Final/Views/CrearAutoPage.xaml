<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.Views.CrearAutoPage"
             BackgroundColor="#004D40"
             Title="CrearAutoPage">
    <StackLayout Padding="20">
        <Image Source="icon_car.png" 
        HorizontalOptions="Center" 
        VerticalOptions="Center" 
        HeightRequest="150" 
        WidthRequest="150"/>

        <Entry Placeholder="Marca" Text="{Binding NuevoCarro.Marca}" BackgroundColor="White" 
       TextColor="Black" />
        <Entry Placeholder="Modelo" Text="{Binding NuevoCarro.Modelo}" BackgroundColor="White" 
       TextColor="Black" />
        <Button Text="Agregar Auto" Command="{Binding AddCarroCommand}" />
    </StackLayout>  
</ContentPage>