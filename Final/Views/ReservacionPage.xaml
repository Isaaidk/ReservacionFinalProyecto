<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final.Views.ReservacionPage"
             Title="ReservacionPage">
    <StackLayout Padding="20">
        <Label Text="Selecciona un auto" />
        <Picker ItemsSource="{Binding Carros}" 
                ItemDisplayBinding="{Binding Marca}" 
                SelectedItem="{Binding CarroSeleccionado}" />

        <Button Text="Crear ReservaciÃ³n" Command="{Binding AddReservacionCommand}" />

        <Label Text="Reservaciones existentes" Margin="0,20,0,10" />
        <CollectionView ItemsSource="{Binding Reservaciones}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" Orientation="Vertical">
                        <Label Text="{Binding NombreCarro}" FontAttributes="Bold" />
                        <Label Text="{Binding FechaReserva}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>